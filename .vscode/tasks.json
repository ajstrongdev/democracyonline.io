{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Tanstack Start (Unix/macOS)",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Start Database (Bash)",
      "type": "shell",
      "command": "bash",
      "args": ["${workspaceFolder}/src/scripts/postgres.sh"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Start Dev Server (Unix/macOS)",
      "dependsOrder": "parallel",
      "dependsOn": ["Start Tanstack Start (Unix/macOS)", "Start Database (Bash)"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
  ]
}
