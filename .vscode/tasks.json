{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Next.js (Unix/macOS)",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "dev"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Next.js (Windows)",
            "type": "shell",
            "command": "pnpm.cmd",
            "args": ["run", "dev"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start API (Unix/macOS)",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "dev:api"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "options": {
                "env": {
                    "CONNECTION_STRING": "postgresql://postgres:postgres@localhost:5432/postgres",
                    "PORT": "4000"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start API (Windows)",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "dev:api"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "options": {
                "env": {
                    "CONNECTION_STRING": "postgresql://postgres:postgres@localhost:5432/postgres",
                    "PORT": "4000"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Database (Bash)",
            "type": "shell",
            "command": "bash",
            "args": ["${workspaceFolder}/src/scripts/postgres.sh"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Database (PowerShell)",
            "type": "shell",
            "command": "powershell",
            "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/src/scripts/postgres.ps1"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Dev Server (Unix/macOS)",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Next.js (Unix/macOS)",
                "Start Database (Bash)",
                "Start API (Unix/macOS)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start Dev Server (Windows)",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Next.js (Windows)",
                "Start Database (PowerShell)",
                "Start API (Windows)"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}